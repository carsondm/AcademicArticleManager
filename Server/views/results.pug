extends layout

mixin res(art)
  div.container.result-card.grow
    div.row.result-header
      div.col-sm-9
        p.result-header= art.title
    div.row.result-snippet
      div.result-snippet
        h5= art.author 
        h5= art.university
      p.result-snippet= art.snippet
      div
        p.read-more Read more
        a.read-more(href='/remove?id=' + art._id) Remove


block content
  div.container-fluid
      
    div.row.justify-content-md-center

      div.col-md-10.result-list.justify-content-md-center
        h1 Results for: #{search}
        h1 Search type: #{searchtype}
        div.row.justify-content-md-center
        
          ul
            each article in results
              +res(article)