extends layout

append scripts
  script.
    $(document).ready(function() {
      $(".login-selector").click(function(){
          $(".register").hide();
          $(".login").show();
      });
      $(".register-selector").click(function(){
          $(".register").show();
          $(".login").hide();
      });
    });
block content
  //- Main body of page, contains search and login boxes
  div.container-fluid
    //- main(role='main')
    div.row.justify-content-md-center.aam-content-pane
      div.col-sm-7.USA
        form.search.justify-content-md-center
          h1 Search

          br
          br
          div.row.aam-row-padded
            div.btn-group.search-selector(data-toggle="buttons")
              div.btn.search-selector-btn.active.col-sm-10
                input(type="radio" name="options" id="keyword" autocomplete="off" checked)
                h4 Keyword
              div.btn.search-selector-btn.col-sm-10
                input(type="radio" name="options" id="author" autocomplete="off")
                h4 Author
              div.btn.search-selector-btn.col-sm-10
                input(type="radio" name="options" id="doi" autocomplete="off")
                h4 DOI

          div.row.aam-row-padded
            input.searchbar(type='text' placeholder='Search')

          div.row.aam-row-padded
            input.aam-btn.btn-primary(type='submit' value='Search' href='/search' method='POST')
  
        br
        br

        form.upload.justify-content-md-center
          h1 Upload

          br
          br
          div.row.aam-row-padded
            input.searchbar(type='text' placeholder='File Location')
            input.aam-btn.btn-primary(type='submit' value='Upload')

      div.col-sm-4.LRA

        div.row
          div.btn-group.lra-selector(data-toggle="buttons")
            div.btn.lra-selector-btn.active.register-selector
              input(type="radio" name="options" id="register" autocomplete="off" checked)
              h3 Register
            div.btn.lra-selector-btn.login-selector
              input(type="radio" name="options" id="login" autocomplete="off")
              h3 Login

        form.login.justify-content-md-center
          h2 Login
          div.row.lra-row
            input.lrfield(type='text' placeholder='Email')
          div.row.lra-row
            input.lrfield(type='text' placeholder='Password')
          div.row.lra-row
            input.aam-btn.btn-primary(type='submit' value='Login')
  
        form.register.justify-content-md-center
          h2 Register
          div.row.lra-row
            input.lrfield(type='text' placeholder='Email')
          div.row.lra-row
            input.lrfield(type='text' placeholder='Password')            
          div.row.lra-row
            input.lrfield(type='text' placeholder='Confirm')
          div.row.lra-row
            input.aam-btn.btn-primary(type='submit' value='Register')

